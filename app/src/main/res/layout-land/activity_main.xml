<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="84sp"
        android:layout_marginTop="8sp"
        android:text="12 + 7"
        android:textSize="64sp"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/buttonNumeral1"
        android:layout_width="72sp"
        android:layout_height="72sp"
        android:layout_marginStart="8sp"
        android:layout_marginTop="16sp"
        android:text="1"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:onClick="onPressDigit1" />

    <Button
        android:id="@+id/buttonNumeral2"
        android:layout_width="72sp"
        android:layout_height="72sp"
        android:layout_marginTop="16sp"
        android:layout_marginLeft="8sp"
        android:text="2"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/buttonNumeral1"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:onClick="onPressDigit2" />

    <Button
        android:id="@+id/buttonNumeral3"
        android:layout_width="72sp"
        android:layout_height="72sp"
        android:layout_marginStart="8sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="8sp"
        android:text="3"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/buttonNumeral2"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:onClick="onPressDigit3" />

    <Button
        android:id="@+id/buttonNumeral4"
        android:layout_width="72sp"
        android:layout_height="72sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onPressDigit4"
        android:text="4"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumeral1" />

    <Button
        android:id="@+id/buttonNumeral5"
        android:layout_width="72sp"
        android:layout_height="72sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8sp"
        android:onClick="onPressDigit5"
        android:text="5"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/buttonNumeral4"
        app:layout_constraintTop_toBottomOf="@id/buttonNumeral2" />

    <Button
        android:id="@+id/buttonNumeral6"
        android:layout_width="72sp"
        android:layout_height="72sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onPressDigit6"
        android:text="6"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/buttonNumeral5"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumeral2" />

    <Button
        android:id="@+id/buttonNumeral7"
        android:layout_width="72sp"
        android:layout_height="72sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onPressDigit7"
        android:text="7"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumeral5" />

    <Button
        android:id="@+id/buttonNumeral8"
        android:layout_width="72sp"
        android:layout_height="72sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onPressDigit8"
        android:text="8"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/buttonNumeral7"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumeral5" />

    <Button
        android:id="@+id/buttonNumeral9"
        android:layout_width="72sp"
        android:layout_height="72sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onPressDigit9"
        android:text="9"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/buttonNumeral8"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumeral6" />

    <Button
        android:id="@+id/buttonNumeral0"
        android:layout_width="72sp"
        android:layout_height="72sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onPressDigit0"
        android:text="0"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/buttonNumeral9"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumeral6" />

    <Button
        android:id="@+id/buttonEquals"
        android:layout_width="150dp"
        android:layout_height="72sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="onPressEquals"
        android:text="="
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTimes" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="150dp"
        android:layout_height="72sp"
        android:layout_marginTop="8sp"
        android:layout_marginEnd="8dp"
        android:onClick="onPressClear"
        android:text="CLEAR"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@id/buttonTimes"
        app:layout_constraintTop_toBottomOf="@+id/buttonMod" />

    <Button
        android:id="@+id/buttonMod"
        android:layout_width="150dp"
        android:layout_height="72sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="onPressOpMod"
        android:text="MOD"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@id/buttonTimes"
        app:layout_constraintTop_toBottomOf="@+id/buttonExponent" />

    <Button
        android:id="@+id/buttonExponent"
        android:layout_width="150dp"
        android:layout_height="72sp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:onClick="onPressOpExponent"
        android:text="EXP"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@id/buttonPlus"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="72sp"
        android:layout_height="72sp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:onClick="onPressOpAdd"
        android:text="+"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonMinus"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="72sp"
        android:layout_height="72sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="8dp"
        android:onClick="onPressOpSubtract"
        android:text="-"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonTimes"
        android:layout_width="72sp"
        android:layout_height="72sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="onPressOpMultiply"
        android:text="ร"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonMinus"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlus" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="72sp"
        android:layout_height="72sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="onPressOpDivide"
        android:text="รท"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMinus" />

</android.support.constraint.ConstraintLayout>