<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="96sp"
        android:layout_marginTop="32sp"
        android:text="12 + 7"
        android:textSize="64sp"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/buttonNumeral1"
        android:layout_width="96sp"
        android:layout_height="96sp"
        android:layout_marginStart="8sp"
        android:layout_marginTop="16sp"
        android:text="1"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:onClick="onPressDigit1" />

    <Button
        android:id="@+id/buttonNumeral2"
        android:layout_width="96sp"
        android:layout_height="96sp"
        android:layout_marginTop="16sp"
        android:layout_marginLeft="8sp"
        android:text="2"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@+id/buttonNumeral1"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:onClick="onPressDigit2" />

    <Button
        android:id="@+id/buttonNumeral3"
        android:layout_width="88dp"
        android:layout_height="96sp"
        android:layout_marginStart="8sp"
        android:layout_marginTop="16sp"
        android:onClick="onPressDigit3"
        android:text="3"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@+id/buttonNumeral2"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonNumeral4"
        android:layout_width="96sp"
        android:layout_height="96sp"
        android:layout_marginStart="8sp"
        android:text="4"
        android:textSize="48sp"
        android:layout_marginTop="8sp"
        app:layout_constraintTop_toBottomOf="@id/buttonNumeral1"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="onPressDigit4"
        />

    <Button
        android:id="@+id/buttonNumeral5"
        android:layout_width="96sp"
        android:layout_height="96sp"
        android:text="5"
        android:textSize="48sp"
        android:layout_marginTop="8sp"
        android:layout_marginLeft="8sp"
        app:layout_constraintTop_toBottomOf="@id/buttonNumeral2"
        app:layout_constraintStart_toEndOf="@+id/buttonNumeral4"
        android:onClick="onPressDigit5"
        />

    <Button
        android:id="@+id/buttonNumeral6"
        android:layout_width="88dp"
        android:layout_height="96sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="6"
        android:textSize="48sp"
        android:layout_marginTop="8sp"
        android:layout_marginLeft="8sp"
        app:layout_constraintTop_toBottomOf="@id/buttonNumeral3"
        app:layout_constraintStart_toEndOf="@+id/buttonNumeral2"
        android:onClick="onPressDigit6"
        />

    <Button
        android:id="@+id/buttonNumeral7"
        android:layout_width="96sp"
        android:layout_height="96sp"
        android:layout_marginStart="8sp"
        android:text="7"
        android:textSize="48sp"
        android:layout_marginTop="8sp"
        app:layout_constraintTop_toBottomOf="@id/buttonNumeral4"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="onPressDigit7"
        />

    <Button
        android:id="@+id/buttonNumeral8"
        android:layout_width="96sp"
        android:layout_height="96sp"
        android:text="8"
        android:textSize="48sp"
        android:layout_marginTop="8sp"
        android:layout_marginLeft="8sp"
        app:layout_constraintTop_toBottomOf="@id/buttonNumeral5"
        app:layout_constraintStart_toEndOf="@+id/buttonNumeral7"
        android:onClick="onPressDigit8"
        />

    <Button
        android:id="@+id/buttonNumeral9"
        android:layout_width="88dp"
        android:layout_height="96sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="9"
        android:textSize="48sp"
        android:layout_marginTop="8sp"
        android:layout_marginLeft="8sp"
        app:layout_constraintTop_toBottomOf="@id/buttonNumeral6"
        app:layout_constraintStart_toEndOf="@+id/buttonNumeral8"
        android:onClick="onPressDigit9"
        />

    <Button
        android:id="@+id/buttonNumeral0"
        android:layout_width="88sp"
        android:layout_height="96sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8sp"
        android:layout_marginEnd="8dp"
        android:onClick="onPressDigit0"
        android:text="0"
        android:textSize="48sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonNumeral9"
        app:layout_constraintStart_toEndOf="@+id/buttonNumeral7"
        app:layout_constraintTop_toBottomOf="@id/buttonNumeral8" />

    <Button
        android:id="@+id/buttonEquals"
        android:layout_width="96sp"
        android:layout_height="200sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onPressEquals"
        android:text="="
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@+id/buttonNumeral9"
        app:layout_constraintTop_toBottomOf="@+id/buttonTimes" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="88sp"
        android:layout_height="96sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="+"
        android:textSize="48sp"
        android:layout_marginLeft="8sp"
        app:layout_constraintTop_toTopOf="@id/buttonNumeral3"
        app:layout_constraintStart_toEndOf="@id/buttonNumeral3"
        android:onClick="onPressOpAdd"
        />

    <Button
        android:id="@+id/buttonTimes"
        android:layout_width="88sp"
        android:layout_height="96sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onPressOpMultiply"
        android:text="Ã—"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@id/buttonNumeral9"
        app:layout_constraintTop_toBottomOf="@+id/buttonNumeral3" />

</android.support.constraint.ConstraintLayout>